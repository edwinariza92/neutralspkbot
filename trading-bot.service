[Unit]
Description=Trading Bot SPKUSDT
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/trading
Environment=PATH=/home/ubuntu/trading/trading_bot_env/bin
ExecStart=/home/ubuntu/trading/trading_bot_env/bin/python /home/ubuntu/trading/SPKUSDT/neutralspk.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target 